<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="simple_robot_arm">

  <!-- Parametri del robot -->
  <xacro:property name="link_length" value="1.0" /> <!-- Lunghezza dei link -->
  <xacro:property name="link_radius" value="0.05" /> <!-- Raggio dei link -->

  <!-- Link 1 - Base -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder radius="${link_radius}" length="0.1" />
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="${link_radius}" length="0.1" />
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Link 2 - Primo segmento del braccio -->
  <link name="link1">
    <!-- Geometria visibile -->
    <visual>
      <geometry>
        <cylinder radius="${link_radius}" length="${link_length}" />
      </geometry>
      <material name="blue"/>
    </visual>
    <!-- Collisione -->
    <collision>
      <geometry>
        <cylinder radius="${link_radius}" length="${link_length}" />
      </geometry>
    </collision>
    <!-- Inerzia -->
    <inertial>
      <mass value="1.0" />
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <!-- Link 3 - Secondo segmento del braccio -->
  <link name="link2">
    <!-- Geometria visibile -->
    <visual>
      <geometry>
        <cylinder radius="${link_radius}" length="${link_length}" />
      </geometry>
      <material name="green"/>
    </visual>
    <!-- Collisione -->
    <collision>
      <geometry>
        <cylinder radius="${link_radius}" length="${link_length}" />
      </geometry>
    </collision>
    <!-- Inerzia -->
    <inertial>
      <mass value="1.0" />
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <!-- Link 4 - Ultimo segmento del braccio -->
  <link name="link3">
    <!-- Geometria visibile -->
    <visual>
      <geometry>
        <cylinder radius="${link_radius}" length="${link_length}" />
      </geometry>
      <material name="red"/>
    </visual>
    <!-- Collisione -->
    <collision>
      <geometry>
        <cylinder radius="${link_radius}" length="${link_length}" />
      </geometry>
    </collision>
    <!-- Inerzia -->
    <inertial>
      <mass value="1.0" />
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <!-- Giunto 1 - Giunto rotante alla base -->
  <joint name="base_to_link1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.1" rpy="0 0 0" /> <!-- Posizione del giunto -->
    <axis xyz="0 0 1" /> <!-- Rotazione attorno all'asse Z -->
    <limit lower="0" upper="3.14159" effort="100" velocity="1.0"/>
  </joint>

  <!-- Giunto 2 - Giunto che ruota tra link1 e link2 -->
  <joint name="link1_to_link2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="${link_length} 0 0" rpy="0 0 0" /> <!-- Posizione del giunto -->
    <axis xyz="0 1 0" /> <!-- Rotazione attorno all'asse Y -->
    <limit lower="0" upper="3.14159" effort="100" velocity="1.0"/>
  </joint>

  <!-- Giunto 3 - Giunto che ruota tra link2 e link3 -->
  <joint name="link2_to_link3" type="revolute">
    <parent link="link2"/>
    <child link="link3"/>
    <origin xyz="${link_length} 0 0" rpy="0 0 0" /> <!-- Posizione del giunto -->
    <axis xyz="0 1 0" /> <!-- Rotazione attorno all'asse Y -->
    <limit lower="0" upper="3.14159" effort="100" velocity="1.0"/>
  </joint>

</robot>
