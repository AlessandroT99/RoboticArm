<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="simple_robot_arm">

  <!-- Gazebo -->
  <gazebo>
    <plugin filename="gz_ros2_control-system" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
      <parameters>$(find robot_description)/config/simple_arm_controllers.yaml</parameters>
    </plugin>
  </gazebo>

  <!-- ROS2 controller -->
  <ros2_control name="SimpleArmHardware" type="system">
    <hardware>
      <plugin>hardware_interface/PositionJointInterface</plugin>
    </hardware>
    <joint name="joint1">
      <command_interface name="position"/>
      <state_interface name="position"/>
    </joint>
    <joint name="joint2">
      <command_interface name="position"/>
      <state_interface name="position"/>
    </joint>
    <joint name="joint3">
      <command_interface name="position"/>
      <state_interface name="position"/>
    </joint>
  </ros2_control>

  <!-- Parametri del robot -->
  <xacro:property name="link_length" value="1.0" /> <!-- Lunghezza dei link -->
  <xacro:property name="link_radius" value="0.05" /> <!-- Raggio dei link -->
  <!-- Materials definition -->
  <material name="black">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>
  <material name="blue">
    <color rgba="0.0 0.0 0.8 1.0"/>
  </material>
  <material name="green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>
  <material name="grey">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>
  <material name="orange">
    <color rgba="1.0 0.4235294117647059 0.0392156862745098 1.0"/>
  </material>
  <material name="brown">
    <color rgba="0.8705882352941177 0.8117647058823529 0.7647058823529411 1.0"/>
  </material>
  <material name="red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>
  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>

  <!-- Link 1 - Base -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder radius="${link_radius}" length="0.1" />
      </geometry>
      <material name="orange"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="${link_radius}" length="0.1" />
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Link 2 - Primo segmento del braccio -->
  <link name="link1">
    <visual>
      <geometry>
        <cylinder radius="${link_radius}" length="${link_length}" />
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="${link_radius}" length="${link_length}" />
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0" />
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <!-- Link 3 - Secondo segmento del braccio -->
  <link name="link2">
    <visual>
      <geometry>
        <cylinder radius="${link_radius}" length="${link_length}" />
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="${link_radius}" length="${link_length}" />
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0" />
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <!-- Link 4 - Ultimo segmento del braccio -->
  <link name="link3">
    <visual>
      <geometry>
        <cylinder radius="${link_radius}" length="${link_length}" />
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="${link_radius}" length="${link_length}" />
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0" />
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <!-- Giunto 1 - Giunto rotante alla base -->
  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.1" rpy="0 0 0" /> <!-- Posizione del giunto -->
    <axis xyz="0 0 1" /> <!-- Rotazione attorno all'asse Z -->
    <limit lower="0" upper="3.14159" effort="100" velocity="1.0"/>
  </joint>

  <!-- Giunto 2 - Giunto che ruota tra link1 e link2 -->
  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="${link_length} 0 0" rpy="0 0 0" /> <!-- Posizione del giunto -->
    <axis xyz="0 1 0" /> <!-- Rotazione attorno all'asse Y -->
    <limit lower="0" upper="3.14159" effort="100" velocity="1.0"/>
  </joint>

  <!-- Giunto 3 - Giunto che ruota tra link2 e link3 -->
  <joint name="joint3" type="revolute">
    <parent link="link2"/>
    <child link="link3"/>
    <origin xyz="${link_length} 0 0" rpy="0 0 0" /> <!-- Posizione del giunto -->
    <axis xyz="0 1 0" /> <!-- Rotazione attorno all'asse Y -->
    <limit lower="0" upper="3.14159" effort="100" velocity="1.0"/>
  </joint>

</robot>
